[Unit]
Description=Zookeeper
After=network.target

[Service]
Restart=on-failure
Environment="JAVA_HOME={{ zookeeper_java_home }}"
ExecStart={{ zookeeper_install_path }}/bin/zookeeper-server-start.sh {{ zookeeper_conf_path }}/zookeeper.properties
ExecStop={{ zookeeper_install_path }}/bin/zookeeper-server-stop.sh
User={{ zookeeper_user }}

[Install]
WantedBy=multi-user.target
