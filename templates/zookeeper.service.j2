[Unit]
Description=Zookeeper
After=network.target

[Service]
Restart=on-failure
Environment="JAVA_HOME={{ zookeeper_java_home }}"
ExecStart={{ zookeeper_install_path }}/bin/zkServer.sh --config {{ zookeeper_conf_path }} start
ExecStop={{ zookeeper_install_path }}/bin/zkServer.sh --config {{ zookeeper_conf_path }} stop
User={{ zookeeper_user }}

[Install]
WantedBy=multi-user.target
