[Unit]
Description=Apache Zookeeper
Documentation=http://zookeeper.apache.org
Requires=network.target
After=network.target

[Service]
Type=forking
EnvironmentFile=/etc/default/zookeeper
ExecStart={{ zookeeper_install_path }}/zookeeper/bin/zkServer.sh --config {{ zookeeper_conf_path }} start
ExecStop={{ zookeeper_install_path }}/zookeeper/bin/zkServer.sh --config {{ zookeeper_conf_path }} stop
TimeoutSec=30
Restart=on-failure
User={{ zookeeper_user }}
Group={{ zookeeper_group }}

[Install]
WantedBy=default.target
