[Unit]
Description=Zookeeper
Documentation=http://zookeeper.apache.org
Requires=network.target
After=network.target

[Service]
Type=forking
WorkingDirectory={{ zookeeper_install_path }}/zookeeper
User={{ zookeeper_user }}
Group={{ zookeeper_group }}
Environment="JAVA_HOME={{ zookeeper_java_home }}"
ExecStart={{ zookeeper_install_path }}/zookeeper/bin/zkServer.sh start {{ zookeeper_conf_path }}
ExecStop={{ zookeeper_install_path }}/zookeeper/bin/zkServer.sh stop {{ zookeeper_conf_path }}
TimeoutSec=30
Restart=on-failure

[Install]
WantedBy=default.target
